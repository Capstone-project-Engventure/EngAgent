# Database Configuration
MYSQL_USER=engagent_user
MYSQL_PASSWORD=engagent_password
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=engagent_db

# LLM Configuration - Ollama
# Use smaller models if you have memory constraints
OLLAMA_MODEL=llama3.2:1b  # Small model ~1.3GB (recommended for limited memory)
# OLLAMA_MODEL=llama3.2:3b  # Medium model ~2.0GB
# OLLAMA_MODEL=mistral  # Large model ~4.8GB (requires more memory)

OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=120

# Alternative model options
OLLAMA_SMALL_MODEL=llama3.2:1b
OLLAMA_MEDIUM_MODEL=llama3.2:3b
OLLAMA_LARGE_MODEL=mistral

# DeepSeek Configuration (Alternative to Ollama)
USE_DEEPSEEK=false
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com

HF_EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# Google Vertex AI Configuration (Optional)
USE_VERTEX=false
VERTEX_PROJECT=your_google_project_id
VERTEX_LOCATION=asia-southeast1
VERTEX_LLM_MODEL=gemini-pro
VERTEX_EMBEDDING_MODEL=textembedding-gecko@001
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json

# Logging
LOG_LEVEL=INFO 